Node* createCard(char* value) {

    Node* newCard = (Node*)malloc(sizeof(Node));

    newCard->value = (char*)malloc(strlen(value) + 1);  // +1 for '\0'

    strcpy(newCard->value, value);

    newCard -> next = NULL;
    newCard -> prev = NULL;

    return newCard;
}

